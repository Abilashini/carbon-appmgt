{{!-- navigation --}}
<nav class="navigation">
    <input type="hidden" name="tenant-store" id="user-tenant-id" value="{{user.tenantId}}">
    <input type="hidden" name="tenant-store" id="user-name" value="{{user.username}}">
    {{#each navigation}}
        {{#ifCond partial "==" "my-apps"}}
            <a id="my-apps-link" href="{{this.url}}"
               class="{{#if active}}active{{/if}} purple">
                <span class="icon"><i class="fw fw-application"></i></span>
                <span class="navigation-item hidden-xs hidden-sm">{{t "My Apps"}}</span>
            </a>
        {{/ifCond}}
        {{#ifCond partial "==" "my-favorites"}}
            <input type="hidden" name="tenant-store" id="user-tenant-id" value="{{user.tenantId}}">
            <input type="hidden" name="tenant-store" id="user-name" value="{{user.username}}">
            <a id="my-favorites-link" href="{{this.url}}"
               class="{{#if active}}active{{/if}} red">
                <span class="icon"><i class="fw fw-heart"></i></span>
                <span class="navigation-item hidden-xs hidden-sm">{{t "My Favorites"}}</span>
            </a>
        {{/ifCond}}
        {{#ifCond partial "==" "all-apps"}}
            <a id="all-apps-link" href="{{this.url}}"
               class="{{#if active}}active{{/if}} blue">
                <span class="icon"><i class="fw fw-resource"></i></span>
                <span class="navigation-item hidden-xs hidden-sm">{{t "All Apps"}}</span>
            </a>
        {{/ifCond}}
    {{/each}}
</nav>

{{!-- left-column - tags --}}
{{#if tags}}
    <div class="tags-wrapper hidden-xs hidden-sm">
        <div class="tag-title"> {{t "Tags"}}</div>
{{!-- tags --}}

<div class="tags-wrapper hidden-xs hidden-sm">
    <div class="tag-title"> {{t "Tags"}}</div>
    {{#if tags}}
        <ul class="tag-content">
            {{#each tags.data}}
                <li><a href="{{../tags.tagUrl}}?tag={{name}}">{{name}}</a></li>
            {{/each}}
        </ul>
    {{/if}}
</div>



